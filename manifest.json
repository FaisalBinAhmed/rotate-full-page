{
	"manifest_version": 3,
	"name": "Rotate Whole Page",
	"description": "Rotate the page in any orientation",
	"author": "Faisal Ahmed",
	"short_name": "Rotate Whole Page",
	"version": "1.0.0",
	"permissions": ["contextMenus", "tabs", "activeTab"],
	"content_security_policy": {
		"extension_pages": "default-src 'self'"
	},
	"background": {
		"service_worker": "context.js"
	},
	"icons": {
		"128": "icon.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["contentScript.js"],
			"css": ["content.css"],
			"run_at": "document_start"
		}
	]
}
